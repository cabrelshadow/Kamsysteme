<div class="table-responsive">
    <div class="float-end mb-3">
        <button class="btn btn-primary" data-bs-target="#addRole" data-bs-toggle="modal"><i class="align-middle"
                data-feather="plus"></i> Ajouter un rôle</button>
    </div>
    <table class="table table-striped">
        <thead class="">
            <caption>Liste des rôles </caption>
            <tr>
                <th>Nom de la section</th>
            </tr>
        </thead>
        <tbody class="">
            {{#each roles}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{isAdmin}}</td>
                    <td>
                        <button data-bs-toggle="modal" data-bs-target="#editRole{{id}}" class="btn btn-warning btn-sm">Modifier</button>
                        <button  class="btn btn-danger btn-sm">Supprimer</button>
                    </td>
                </tr>
                <!-- Modal Body -->
                <!-- if you want to close by clicking outside the modal, delete the last endpoint:data-bs-backdrop and data-bs-keyboard -->
                <div class="modal fade" id="editRole{{id}}" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog"
                    aria-labelledby="modalTitleaddRole" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-sm" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalTitleaddRole">Modifier le rôle {{name}}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/settings/edit-role/{{id}}" method="post">
                                    <div class="mb-3">
                                        <label for="nom" class="form-label">Nom du role</label>
                                        <input type="text" class="form-control" name="nom" id="nom" aria-describedby="helpId"
                                            placeholder="" value="{{name}}">
                                        <small id="helpId" class="form-text text-muted"></small>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="isAdmin" {{#if isAdmin}}
                                            checked
                                        {{/if}} name="isAdmin" value="true">
                                        <label class="form-check-label" for="">est Administrateur</label>
                                    </div>
                
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal Body -->
<!-- if you want to close by clicking outside the modal, delete the last endpoint:data-bs-backdrop and data-bs-keyboard -->
<div class="modal fade" id="addRole" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog"
    aria-labelledby="modalTitleaddRole" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitleaddRole">Ajouter une section</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/settings/add-role" method="post">
                    <div class="mb-3">
                        <label for="nom" class="form-label">Nom du role</label>
                        <input type="text" class="form-control" name="nom" id="nom" aria-describedby="helpId"
                            placeholder="">
                        <small id="helpId" class="form-text text-muted"></small>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin" value="true">
                        <label class="form-check-label" for="">est Administrateur</label>
                      </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                </form>
            </div>
        </div>
    </div>
</div>