<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="list-users-list" data-bs-toggle="list"
                href="#list-users" role="tab" aria-controls="list-users">Utilisateurs</a>
            <a class="list-group-item list-group-item-action" id="list-sections-list" data-bs-toggle="list"
                href="#list-sections" role="tab" aria-controls="list-sections">Sections</a>
            <a class="list-group-item list-group-item-action" id="list-roles-list" data-bs-toggle="list"
                href="#list-roles" role="tab" aria-controls="list-roles">Roles</a>
            <a class="list-group-item list-group-item-action" id="list-categories-list" data-bs-toggle="list"
                href="#list-categories" role="tab" aria-controls="list-categories">Categories</a>
        </div>
    </div>
    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-users" role="tabpanel" aria-labelledby="list-users-list">{{>settings/_user}}
            </div>
            <div class="tab-pane fade" id="list-sections" role="tabpanel" aria-labelledby="list-sections-list">{{>settings/_section}}</div>
            <div class="tab-pane fade" id="list-roles" role="tabpanel" aria-labelledby="list-roles-list">{{>settings/_role}}</div>
            <div class="tab-pane fade" id="list-categories" role="tabpanel" aria-labelledby="list-categories-list">...</div>
        </div>
    </div>
</div>